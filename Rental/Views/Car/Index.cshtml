@model IEnumerable<Rental.Data.Models.Car>

@{
    ViewData["Title"] = "Човни";
    Layout = "_Layout";
}

<h1>Список човнів</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Додати човен</a>
</p>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Деталі</th>
            <th>Категорія</th>
            <th>Фото</th>
            <th>Ціна</th>
            <th>Топ</th>
            <th>Доступ</th>
            <th>Довжина</th>     @* bodyType *@
            <th>Сили</th>         @* horsepower *@
            <th>Швидкість</th>    @* fuelType *@
            <th>Колір</th>
            <th>Рік</th>          @* transmission *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>
                <td>@item.shortDesc</td>
                <td>@item.longDesc</td>
                <td>@item.Category?.categoryName</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(item.img))
                    {
                        <img src="@item.img" style="max-width:100px;max-height:100px;" alt="@item.name" />
                    }
                </td>
                <td>@item.price</td>
                <td>@item.isFavourite</td>
                <td>@item.available</td>
                <td>@item.bodyType</td>        @* Довжина *@
                <td>@item.horsepower</td>      @* Сили *@
                <td>@item.fuelType</td>        @* Швидкість *@
                <td>@item.color</td>
                <td>@item.transmission</td>    @* Рік *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning btn-sm">✏️</a> |
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">🔍</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
